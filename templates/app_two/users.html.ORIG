<!DOCTYPE html>
{% load staticfiles %}
<html>
    <head>
        <meta charset="utf-8">
        <title>User records</title>
        <link rel="stylesheet" href="{% static "css/mystyle.css" %}"/>
    </head>
    <body>
        <h1>Hi welcome to Django level 2!</h1>
        <h2>Here are your user records:</h2>

        <div class="djangtwo">
            {% if user_records %}
            <table>
                <thead>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                </thead>
                {% for user in user_records %}
                <tr>
                    <td>{{ user.first_name }}</td>
                    <td>{{ user.last_name }}</td>
                    <td>{{ user.email }}</td>
                </tr>    
                {% endfor %}
            </table>
            {% else %}
            <p>No access records found!</p>
            {% endif %}

        </div>

    </body>
</html>
